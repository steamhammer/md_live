<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            line-height: 1.6;
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
            color: #333;
        }
        h1, h2, h3, h4, h5, h6 {
            margin-top: 1.5em;
            margin-bottom: 0.5em;
        }
        pre {
            background: #f4f4f4;
            padding: 1rem;
            overflow-x: auto;
            border-radius: 4px;
        }
        code {
            background: #f4f4f4;
            padding: 0.2em 0.4em;
            border-radius: 3px;
            font-size: 0.9em;
        }
        pre code {
            padding: 0;
            background: none;
        }
        blockquote {
            border-left: 4px solid #ddd;
            padding-left: 1rem;
            margin-left: 0;
            color: #666;
        }
        a {
            color: #0066cc;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
        img {
            max-width: 100%;
            height: auto;
        }

        .sidebar {
          position: fixed;
          overflow: hidden;
          left: 0;
          top: 0;
          background-color: lightgray;
          display: block;
          width: 24px;
          height: 24px;
        }
        .sidebar:hover {
          width: 240px;
          height: 100vh;
          box-shadow: 3px 0 20px rgba(0,0,0,0.75);
        }
    </style>
    <% if (liveReload) { %>
    <script>
        const close = () => {
          console.log('close');
        }
        const eventSource = new EventSource('/events');

        eventSource.onmessage = (event) => {
            const data = JSON.parse(event.data);
            if (data.type === 'file-changed') {
                console.log('File changed:', data.path, 'at', data.timestamp);
                if (window.location.pathname === data.path) {
                    window.location.reload();
                }
            }
        };

        eventSource.onerror = (error) => {
            console.error('SSE connection error:', error);
            eventSource.close();
        };

        // Clean up on page unload to prevent polluting memory with dead handlers
        window.addEventListener('beforeunload', () => {
            eventSource.close();
        });
    </script>
    <% } %>
</head>
<body>
    <% if (fileList) { %>
    <div class='sidebar open'>
    <ul>
     <% fileList.forEach(function(item){ %>
       <li>
         <a href="<%- item.path %>"><%- item.path %></a>
       </li>
     <% }); %>
    </ul>
    </div>
    <% } %>
    <span>Last updated: <%- lastUpdated %></span>
    <%- content %>
</body>
</html>
